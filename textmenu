package com.conversordemoedas;

public class TextMenu {
    private String menuText;

    public TextMenu(String nome) {
        setMenuText(nome);
    }

    public void setMenuText(String nome) {
        this.menuText = "Olá " + nome + ", escolha uma opção:\n" +
                        "1. Converter Moeda\n" +
                        "2. Sair";
    }

    public String getMenuText() {
        return menuText;
    }
}
